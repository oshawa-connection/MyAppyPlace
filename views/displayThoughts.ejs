<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AppyThoughts</title>
    <link rel="stylesheet" type = "text/css" href="/style.css">
  
</head>

<script type="text/javascript">
    
</script>
<body>

    <div id='fixed-profilePicture'>
        <!-- <form action='/displayResults' method="POST"><input placeholder="Search" minlength='3' maxlength="255" required="required" name="searchTerm" type="text"></input></form> -->
        <button onclick="location.href = '/search';">SEARCH</button>
        
        <br>
    
    
    </div>

    <div class="mainContainer">
        <h1> What made you happy? ðŸ™‚</h1>
        
        <form action="/newThought" method="POST">
            <textarea placeholder="What's on your mind?" class="verticalTextArea inputClass" minlength='10' maxlength="255" required="required" name="thoughtText" type="text"></textarea>        
            
            <br>   
            <input placeholder="Who are you?" minlength='3' maxlength="255" required="required" name="postedBy" type="text"></input>     
            <button type="submit" id="myButton" class="float-left submit-button" >New Thought</button>
        </form>

        
        <ul>
            <% thoughts.forEach(function(thought){ %>
                <div class="card" id=" <%= thought.thoughtID %>  ">
                    <div class="cardContainer">
                        <h2><%= thought.thoughtText %></h2>
                        <h6>Posted by: <%=thought.postedBy%> on <%= thought.createdAt.toLocaleString('en-GB',{ timeZone: 'UTC'}) %></h6>
                    </div>

                </div>
                <br>
                
            <% }); %>
        </ul>
        <br>
        
    </div>
</body>
</html>