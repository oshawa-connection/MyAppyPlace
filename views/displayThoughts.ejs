    <div class="mainContainer">
        <h1> What made you happy? ðŸ™‚</h1>
        
        <form action="/newThought" method="POST">
            <textarea placeholder="What's on your mind?" class="verticalTextArea inputClass" minlength='10' maxlength="255" required="required" name="thoughtText" type="text"></textarea>        
            
            <br>   
            <input minlength='3' maxlength="255" required="required" name="postedBy" type="text"></input>     
            <button type="submit" id="myButton" class="float-left submit-button" >New Thought</button>
        </form>

        
        <ul>
            <% thoughts.forEach(function(thought){ %>
                <div class="card" id=" <%= thought.thoughtID %>  ">
                    <div class="cardContainer">
                        <h2><%= thought.thoughtText %></h2>
                        <h6>Posted by: <%=thought.postedBy%> on <%= thought.createdAt.toLocaleString('en-GB',{ timeZone: 'UTC'}) %></h6>
                    </div>

                </div>
                <br>
                
            <% }); %>
        </ul>
        <br>
        
    </div>
